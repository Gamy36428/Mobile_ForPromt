                            android:backgroundTint="@color/settings_color_9" />

                        <Button
                            android:id="@+id/bc10Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_10" />

                        <Button
                            android:id="@+id/bc11Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_11" />

                        <Button
                            android:id="@+id/bc12Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_12" />

                        <Button
                            android:id="@+id/bc13Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_13" />

                        <Button
                            android:id="@+id/bc14Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_14" />

                        <Button
                            android:id="@+id/bc15Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_15" />

                        <Button
                            android:id="@+id/bc16Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_16" />

                        <Button
                            android:id="@+id/bc17Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_17" />

                        <Button
                            android:id="@+id/bc18Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_18" />

                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_container_height"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/colorSampleText"
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:gravity="center"
                        android:text="Your text will look like this"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/setting_margins">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_container_height"
                    app:layout_constraintTop_toBottomOf="@id/settingsTitle">

                    <TextView
                        android:id="@+id/bluetoothTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:height="@dimen/setting_container_height"
                        android:text="@string/bluetooth_controller"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:background="@color/Fortinge_Navigation_Background"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:padding="@dimen/setting_margins"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <ImageView
                        android:id="@+id/bleRotatingImage"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:src="@drawable/ble_rotate"
                        app:layout_constraintRight_toLeftOf="@id/bleScanSwitch"
                        tools:layout_editor_absoluteY="10dp" />

                    <Switch
                        android:id="@+id/bleScanSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintRight_toRightOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_container_height"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/setting_margins">

                    <TextView
                        android:id="@+id/bleLbl"
                        android:layout_width="@dimen/setting_labels_width"
                        android:layout_height="match_parent"
                        android:text="@string/bluetooth_device"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        app:layout_constraintLeft_toLeftOf="parent"/>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintLeft_toRightOf="@id/bleLbl"
                        app:layout_constraintRight_toLeftOf="@id/bleConnectionSwitch">

                        <Spinner
                            android:id="@+id/bleDevicesSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/line_border" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_expand"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>


                    <Switch
                        android:id="@+id/bleConnectionSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/bleStatusTxt"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="#262626"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/setting_margins">


                    <TextView
                        android:id="@+id/aboutTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:height="@dimen/setting_container_height"
                        android:text="@string/about"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:background="@color/Fortinge_Navigation_Background"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:padding="@dimen/setting_margins"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/ForPromptGray"
                        app:layout_constraintTop_toBottomOf="parent">

                        <ImageView
                            android:id="@+id/logoImg"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/setting_container_height"
                            android:background="#262626"
                            android:src="@drawable/fortinge_master_logo_w_2019"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:id="@+id/systemVersionLnr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#262626"
                            android:gravity="center"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@id/logoImg">

                            <TextView
                                android:id="@+id/forpromptLbl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:gravity="center"
                                android:text="ForPrompt v3.1"
                                android:textColor="@color/gray"
                                tools:ignore="HardcodedText" />


                            <TextView
                                android:id="@+id/systemInfoLblBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:contextClickable="true"
                                android:text="@string/show_system_information"
                                android:textColor="@color/gray" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/linksLbl"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:background="#262626"
                            android:gravity="center"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@id/systemVersionLnr">

                            <TextView
                                android:id="@+id/websiteTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/setting_margins"
                                android:autoLink="web"
                                android:text="www.fortinge.com"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/emailTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/setting_margins"
                                android:autoLink="email"
                                android:text="support@fortinge.com"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/trademarkLbl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#262626"
                            android:gravity="center"
                            android:text="@string/trademark_rights"
                            android:textColor="@color/gray"
                            app:layout_constraintTop_toBottomOf="@id/linksLbl" />







                </androidx.constraintlayout.widget.ConstraintLayout>




            </LinearLayout>



        </LinearLayout>



    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>