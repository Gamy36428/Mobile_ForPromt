<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fortinge.prompter.ui.SettingsFragment"
    android:background="@color/ForPromptGray">

    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="@string/toolbar_text"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/setting_container_height"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/settingsTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/setting_margins"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/generalTitle"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:height="@dimen/setting_container_height"
                    android:background="@color/Fortinge_Navigation_Background"
                    android:gravity="center_vertical"
                    android:padding="@dimen/setting_margins"
                    android:text="@string/general"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/settingsTitle" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_container_height"
                    android:layout_margin="@dimen/setting_margins"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/showSpeedRate"
                        tools:visibility="invisible">

                        <Spinner
                            android:id="@+id/speedRateSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/setting_margins"
                            android:layout_marginTop="@dimen/setting_margins"
                            android:layout_marginEnd="@dimen/setting_margins"
                            android:layout_marginBottom="@dimen/setting_margins"
                            android:layout_weight="1"
                            android:background="@drawable/line_border"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:layout_editor_absoluteY="0dp" />

                        <ImageView
                            android:id="@+id/speedRateSpinner2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/ic_expand" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="@dimen/setting_labels_width"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/speed_rate"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent" />



                    <Switch
                        android:id="@+id/showSpeedRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.478"
                        tools:ignore="UseSwitchCompatOrMaterialXml"
                        tools:visibility="visible" />




                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_container_height"
                    android:layout_margin="@dimen/setting_margins"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/countdownLbl"
                        android:layout_width="@dimen/setting_labels_width"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/countdown"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/line_border"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/countdownSwitch"
                        tools:visibility="invisible">

                        <ImageButton
                            android:id="@+id/countdownMinusBtn"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_arrow_left"
                            app:layout_constraintLeft_toLeftOf="parent" />

                        <EditText
                            android:id="@+id/countdownNumberPicker"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@color/trans"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="0"
                            android:textColor="@color/white"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintLeft_toRightOf="@id/countdownMinusBtn"
                            app:layout_constraintRight_toLeftOf="@id/countdownPlusBtn"
                            tools:ignore="HardcodedText"
                            tools:layout_editor_absoluteY="0dp" />

                        <ImageButton
                            android:id="@+id/countdownPlusBtn"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_arrow_right"
                            app:layout_constraintRight_toRightOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <Switch
                        android:id="@+id/countdownSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/countdownLbl"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout


                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_container_height"
                    android:layout_margin="@dimen/setting_margins"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/showCueMarker"
                        android:layout_width="@dimen/setting_labels_width"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/cue_indicator"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent" />

                    <SeekBar
                        android:id="@+id/editCueMarkerPosition"
                        android:layout_width="172dp"
                        android:layout_height="33dp"
                        android:layout_marginStart="24dp"
                        android:max="6"
                        android:progress="3"
                        android:visibility="invisible"
                        app:layout_constraintEnd_toEndOf="parent"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/markerSwitch"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Switch
                        android:id="@+id/markerSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="88dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/showCueMarker"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_container_height"
                    android:layout_margin="@dimen/setting_margins"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/loopLbl"
                        android:layout_width="@dimen/setting_labels_width"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/loop"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent" />


                    <Switch
                        android:id="@+id/loopSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="88dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/loopLbl"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_container_height"
                    android:layout_margin="@dimen/setting_margins"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/showScrollLbl"
                        android:layout_width="@dimen/setting_labels_width"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/show_scroll"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent" />


                    <Switch
                        android:id="@+id/showScrollSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="88dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/showScrollLbl"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_container_height"
                    android:layout_margin="@dimen/setting_margins"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/marginsLbl"
                        android:layout_width="@dimen/setting_labels_width"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/margins"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent" />


                    <androidx.constraintlayout.widget.ConstraintLayout

