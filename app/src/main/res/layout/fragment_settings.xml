                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@color/trans"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="0"
                            android:textColor="@color/white"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintLeft_toRightOf="@id/marginsMinusBtn"
                            app:layout_constraintRight_toLeftOf="@id/marginsPlusBtn"
                            tools:ignore="HardcodedText"
                            tools:layout_editor_absoluteY="0dp" />

                        <ImageButton
                            android:id="@+id/marginsPlusBtn"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_arrow_right"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:layout_editor_absoluteY="0dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <Switch
                        android:id="@+id/marginsSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/marginsLbl"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_container_height"
                    android:layout_margin="@dimen/setting_margins"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/rtlLbl"
                        android:layout_width="@dimen/setting_labels_width"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/right_to_left"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent" />


                    <Switch
                        android:id="@+id/rtlSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="UseSwitchCompatOrMaterialXml" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_container_height"
                    android:layout_margin="@dimen/setting_margins"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textColorLbl"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/text_color"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintLeft_toRightOf="@id/textColorLbl"
                        app:layout_constraintRight_toRightOf="parent">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tc1Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/white" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tc2Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/black" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tc3Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_3" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tc4Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_4" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tc5Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_5" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tc6Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_6" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tc7Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_7" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tc8Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_8" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tc9Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_9" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tc10Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_10" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tc11Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_11" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tc12Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_12" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tc13Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_13" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tc14Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_14" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tc15Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_15" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tc16Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_16" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tc17Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_17" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/tc18Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_18" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/setting_container_height"
                    android:layout_margin="@dimen/setting_margins"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/backgroundColorLbl"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/background_color"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="parent" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintLeft_toRightOf="@id/backgroundColorLbl"
                        app:layout_constraintRight_toRightOf="parent">

                        <Button
                            android:id="@+id/bc1Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/white" />

                        <Button
                            android:id="@+id/bc2Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/black" />

                        <Button
                            android:id="@+id/bc3Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_3" />

                        <Button
                            android:id="@+id/bc4Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_4" />

                        <Button
                            android:id="@+id/bc5Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".1"
                            android:backgroundTint="@color/settings_color_5" />

