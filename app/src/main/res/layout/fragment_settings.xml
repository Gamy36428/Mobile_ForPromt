                        tools:visibility="invisible">

                        <ImageButton
                            android:id="@+id/marginsMinusBtn"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_arrow_left"
                            app:layout_constraintLeft_toLeftOf="parent" />

                        <EditText
